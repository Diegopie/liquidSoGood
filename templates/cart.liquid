{% form 'cart', cart %}
  <h1>Cart</h1>

  {% for item in cart.items %}
    <div>
      <img
        src="{{ item.image | image_url }}"
        width="100px"
        height="150px"
      >
      <h2>{{ item.title }}</h2>
      <p>{{ item.price | money }}</p>
    </div>
  {% endfor %}

  <hr>
  <p>Total is: {{ cart.total_price | money }}</p>

  <button type="submit" name="checkout">Check Out</button>
{% endform %}
